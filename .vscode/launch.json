    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: wpt serve",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/wpt.py",
            "args": ["serve", "--inject-script","foobar.js"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
         
    ]
}